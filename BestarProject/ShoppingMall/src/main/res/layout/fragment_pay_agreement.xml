<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_next_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_agreement_bg"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="代理协议"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/topLayoutTv"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#66999999"
            android:id="@+id/lineView"
            android:layout_below="@id/topLayoutTv"
            ></View>

        <ScrollView android:layout_below="@id/lineView"
            android:layout_above="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#a6a6a6"
                    android:textSize="14sp"
                    android:text="adfjakdjfkjadfadjadklfjdadfadfadfadfadfadfadfadfjfkladjklfj"
                    android:lineSpacingExtra="5dp"
                    android:id="@+id/contentView"
                    />
                </LinearLayout>

            </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bottomLayout"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#66999999"
            ></View>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本人已同意此代理协议"
            android:id="@+id/checkBoxView"
            android:textColor="#a6a6a6"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_submit_btn"
            android:text="同意/付款"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/tetx_title_color"
            android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>