<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mine_loadding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/app_theme_color"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <com.manyi.mall.widget.imageView.CircleImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/head"
                            app:border_width="0dp"
                            android:id="@+id/headLayout"
                            app:border_color="@color/blue" />

                        <TextView
                            android:id="@+id/nameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:text="威尼斯"
                            android:textColor="#fff"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/line_mine_color"></View>

                    <RelativeLayout android:background="@color/white_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/mine_select"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="我的代金券"
                            android:id="@+id/Layout1"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/mineRightArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/text" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/mineRightArrow"
                            android:src="@drawable/prompt" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_mine_color"></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/line_mine_color"></View>

                    <RelativeLayout android:background="@color/white_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/messageRemindLayout"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/mine_select"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="消息提醒"
                            android:textSize="16sp" />


                        <com.manyi.mall.widget.switchView.ToggleButton
                            android:layout_width="54dp"
                            toggle:onColor="@color/app_theme_color"
                            android:id="@+id/switchBtn"
                            toggle:offColor="#CACACA"
                            toggle:spotColor="#fff"
                            toggle:offBorderColor="#CACACA"
                            toggle:borderWidth="1dp"
                            android:paddingLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_mine_color"></View>

                    <RelativeLayout android:background="@color/white_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/shareApp"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/mine_select"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="分享应用"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/text" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_mine_color"></View>

                    <RelativeLayout android:background="@color/white_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/supportUsTv"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/mine_select"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="来支持我们"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/text" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_mine_color"></View>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/line_mine_color"></View>

                    <RelativeLayout android:background="@color/white_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/feedback"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/mine_select"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="意见反馈"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/text" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_mine_color"></View>

                    <RelativeLayout android:background="@color/white_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/payHelpTv"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/mine_select"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="支付帮助"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/text" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_mine_color"></View>

                    <RelativeLayout android:background="@color/white_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/check_update"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/mine_select"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="检查更新"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/versionArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/text" />

                        <TextView
                            android:id="@+id/currentVersionTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/versionArrow"
                            android:background="@drawable/mine_select"
                            android:text="当前版本：V1.0"
                            android:textColor="#66000000"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_mine_color"></View>

                    <RelativeLayout android:background="@color/white_action"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/aboutUsTv"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/mine_select"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="关于我们"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/text" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_mine_color"></View>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/selector_mine_exit_btn_bg"
                        android:text="退出登录"
                        android:textSize="18sp"
                        android:textColor="@color/app_theme_color"
                        android:id="@+id/mine_exit_btn"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>