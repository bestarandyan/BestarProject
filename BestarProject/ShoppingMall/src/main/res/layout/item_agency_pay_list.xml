<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/section_item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imgAgencyPay"
        android:src="@drawable/take_photos_list_no__thumbnail" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/companyNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="凯奇集团"
                android:textColor="#dd000000"
                android:textSize="@dimen/list_item_title_text_size" />

            <TextView
                android:id="@+id/cityNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="上海"
                android:textColor="#dd000000"
                android:textSize="@dimen/list_item_title_text_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/moneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="￥300"
            android:textColor="#99ff0000"
            android:textSize="@dimen/list_item_content_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期："
                    android:textColor="#8a000000"
                    android:textSize="@dimen/list_item_content_text_size" />

                <TextView
                    android:id="@+id/validTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2015-1-31至2015-2-31"
                    android:textColor="#8a000000"
                    android:textSize="@dimen/list_item_content_text_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>