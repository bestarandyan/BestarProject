<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/actionbar"
        android:padding="0dp"
        android:tag="actionBar">

        <ImageButton
            android:id="@+id/area_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/ic_action_up" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="全部类目"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="五大领域"
                    android:textColor="#b0b0b0"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/take_photos_list_tick"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    android:layout_marginLeft="20dp"
                    ></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/allTypeHeight"
                android:text="多媒体课程"
                android:textColor="#b0b0b0"
                android:layout_weight="1"
                android:textSize="14sp"
                android:background="@drawable/selector_all_type_btn"
                android:gravity="center"
                android:id="@+id/allBtn1"
                />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="纸质教材"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn2"
                    android:layout_marginLeft="10dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="线上教材"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn3"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音乐艺术"
                    android:textColor="#b0b0b0"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/take_photos_list_tick"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    android:layout_marginLeft="20dp"
                    ></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="多媒体课程"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn4"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="纸质教材"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn5"
                    android:layout_marginLeft="10dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="教具类"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn6"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="儿童美语"
                    android:textColor="#b0b0b0"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/take_photos_list_tick"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    android:layout_marginLeft="20dp"
                    ></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="国外品牌"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn7"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="国内品牌"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn8"
                    android:layout_marginLeft="10dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="多媒体课程"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn9"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数学思维"
                    android:textColor="#b0b0b0"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/take_photos_list_tick"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    android:layout_marginLeft="20dp"
                    ></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="多媒体课程"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn10"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="全脑开发"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn11"
                    android:layout_marginLeft="10dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="测评类"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn12"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进修培训"
                    android:textColor="#b0b0b0"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/take_photos_list_tick"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    android:layout_marginLeft="20dp"
                    ></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="园长"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn13"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="园务"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn14"
                    android:layout_marginLeft="10dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/allTypeHeight"
                    android:text="行销"
                    android:textColor="#b0b0b0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/selector_all_type_btn"
                    android:gravity="center"
                    android:id="@+id/allBtn15"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>